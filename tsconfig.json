{
  "compilerOptions": {
    
    "module": "commonjs",  
    "allowJs": true,
    "outDir": "/src/dist", 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,             
    // "moduleResolution": "nodenext",                         
    "skipLibCheck": true,
    "target": "ES2017",                                  
    "paths": {
      "@/*": ["./src/*"]
    }                             
  }
}
